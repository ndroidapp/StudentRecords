<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.noor.studentrecords.MainActivity">

    <ImageButton
        android:id="@+id/ibnAdd"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/person_add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ibtnShow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/ibtnShow"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/person_record"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ibnAdd"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>
